      <% else %>
        <div class="empty-state">
          <p class="empty-message">No listings yet. Be the first to <%= link_to "post an ad", new_listing_path, class: "link" %>!</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- CTA Section -->
